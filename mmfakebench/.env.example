# MMFakeBench Environment Configuration
# Copy this file to .env and fill in your actual API keys

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-organization-id-here  # Optional

# Google Gemini API Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# Anthropic Claude API Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Search API Configuration
BRAVE_SEARCH_API_KEY=your-brave-search-api-key-here
SERP_API_KEY=your-serpapi-key-here  # Optional alternative

# Dataset Paths
MMFAKEBENCH_DATA_PATH=./data/mmfakebench/
MOCHEG_DATA_PATH=./data/mocheg/

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/mmfakebench.log

# Model Configuration Defaults
DEFAULT_MODEL_PROVIDER=openai
DEFAULT_MODEL_NAME=gpt-4o-mini
MAX_TOKENS=4096
TEMPERATURE=0.1

# Pipeline Configuration
MAX_RETRIES=3
RETRY_DELAY=1.0
REQUEST_TIMEOUT=30

# Output Configuration
RESULTS_DIR=./results/
CACHE_DIR=./cache/